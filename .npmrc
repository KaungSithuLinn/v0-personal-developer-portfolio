# Use strict-ssl to ensure secure connections when installing packages
strict-ssl=true

# Audit dependencies for security vulnerabilities
audit=true

# Automatically fix security issues when possible during npm install
audit-level=moderate
fund=false

# Use a specific registry (optional, use if you have a private registry)
registry=https://registry.npmjs.org/

# Prevent installation of packages with known vulnerabilities
# This will cause npm to fail if vulnerabilities are found
# Uncomment the line below if you want to enforce this
# audit-level=high

