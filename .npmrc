# Use strict-ssl to ensure secure connections when installing packages
strict-ssl=true

# Audit dependencies for security vulnerabilities
audit=true

# Use a specific registry
registry=https://registry.npmjs.org/

# Save exact versions in package.json
save-exact=true

# Disable fund messages
fund=false

# Ensure package-lock.json is generated
package-lock=true

# Set legacy peer deps to false by default (we'll override in CI if needed)
legacy-peer-deps=false

# Increase network timeout for slow connections
network-timeout=60000

